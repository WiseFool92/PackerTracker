@using PackerTracker.Models;
<!DOCTYPE html>
<html>
  <head>
  <title>C# Packer Tracker</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
  </head>
  <body>
    <div class="gr">
      <h1 id="type">Your Items</h1>
      @if (Model.Count == 0)
      {
        <p>There are currently no items.</p>
      }
      @foreach (Item item in Model)
      {
       <h4><a href='items/@item.Id'>@item.ItemName</a></h4>
      }
    </div>
    <a href="/CreateForm"><button id="btnLocation">Add an item!</button></a>
    <a href="/">Back Home</a></p>
  </body>
</html>